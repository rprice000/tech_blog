

{{!-- <h2>Welcome, {{user.username}}!</h2> --}}
<h2>Your Posts</h2>

<div>
    <button type="submit"><a href="/dashboard/create-post">Create New Post</a></button>
</div>


{{#if posts.length}}
<section>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
