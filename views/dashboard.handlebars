 <section class="container">
  <div class="col align-self-center">
    <h2>Your Posts</h2>

    <div>
      <a href="/dashboard/create-post">
        <button type="submit" class="btn btn-primary mb-3">Create New Post</button>
      </a>
    </div>
  </div>
  </section>
  



    {{#if posts.length}}
    <section class="container">
      <div class="row">
        {{#each posts as |post|}}
        <div class="col-3">
          <button type="submit" class="btn btn-dark text-white mb-3">{{> post-info post}}</button>
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">
            <button type="submit" class="btn btn-danger mb-3">Edit post</button>
          </a>
        </div>
        {{/each}}
      </div>
    </section>
    {{/if}}

 