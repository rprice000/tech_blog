<article>
  <div class="container">
    <a href="/dashboard"> &larr; Back to dashboard</a>
  </div>
  <div class="container">
    <div class="col align-self-center">
      <h2>Edit Post</h2>
      <form class="edit-post-form">
        <div class="mb-3">
          <label for="post-title" class="form-label">Title</label>
          <input type="text" class="form-control" name="post-title" value="{{post.title}}" />
        </div>
        <div class="mb-3">
          <label for="post-content" class="form-label">Content</label>
          <div>
            <textarea type="text" class="form-control" name="post-content">{{post.content}}</textarea>
          </div>
        </div>
        <button type="button" id="update-btn" class="btn btn-primary mb-3">Update Post</button>
        <button type="button" id="delete-btn" class="btn btn-primary mb-3">Delete Post</button>
      </form>
    </div>
  </div>

</article>

<div class="container">
  <div class="col align-self-center">
    <h2>Add Comments To This Post</h2>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>

    <form class="comment-form">
      <div class="mb-3">
        <label for="comment-body" class="form-label">Comment</label>
        <textarea class="form-control" name="comment-body"></textarea>
      </div>

      <div>
        <button type="submit" class="btn btn-primary mb-3">Add Comment</button>
      </div>
    </form>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card-body">
      {{> comments post.comments}}
    </div>
  </div>
</div>

<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>
<script src="/javascript/comment.js"></script>